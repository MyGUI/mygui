<?xml version="1.0" encoding="UTF-8"?>
<MyGUI type="LECodeTemplate" name="C++ BaseLayout">
    <File template="CodeTemplates/BaseLayoutTemplate.h" out_file="#{Include_folder}/#{Panel_Name}.h"/>
    <File template="CodeTemplates/BaseLayoutTemplate.cpp" out_file="#{Src_folder}/#{Panel_Name}.cpp"/>
    <String key="Code_Widget_Name" value="m#{Widget_Name}"/>
    <String key="Widget_Declaration" value="MyGUI::#{Widget_Type} #{Code_Widget_Name};\n"/>
    <String key="Widget_Assign" value="assignWidget(#{Code_Widget_Name}, &quot;#{Widget_Name}&quot;);\n"/>
    <String key="Event_Declaration" value="void #{Widget_Name}_#{Event_Name}(#{Event_Signature});\n"/>
    <String key="Event_Definition" value="void #{Panel_Name}::#{Widget_Name}_#{Event_Name}(#{Event_Signature})\n{\n\n}\n\n"/>
    <String key="Evant_Assign" value="assignWidget(#{Code_Widget_Name}, #{Widget_Name});\n"/>
</MyGUI>